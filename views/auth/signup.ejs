<h1 class="sunken_header">Sign Up</h1>
<section class="bg_black">

  <form action="/auth/signup" method="POST" class="auth_form bg_black">
    <div class="c_input mg_md_md">
      <label class="sr_only" for="new-email">Email</label>
      <input id="new-email" type="email" name="email" placeholder="Email">
    </div>

    <div class="c_input mg_md_md">
      <label class="sr_only" for="new-password">Password</label>
      <input id="new-password" type="password" name="password" placeholder="Password">
    </div>
    <div class="c_input mg_md_md">
      <button type="submit">Submit</button>
    </div>
  </form>
  <a href="/auth/login" class="m_light">Log In</a>
</section>