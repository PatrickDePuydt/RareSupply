<div class="container">
  <h1 class="text-center">Pearl Syrup</h1>
  
  <p class="text-center">
    <a href="/pokemon">Favorites</a>
  </p>

  <% pearls.forEach(function(pearls) { %>
    <div class="well">
      <h2><%= pearls.name %></h2>
      <form method="POST" action="/pokemon">
        <input hidden type="text" name="name" value="<%= pearls.name %>">
        <button class="btn btn-primary" type="submit">Add to Favorite Pokemon</button>
      </form>
    </div>
  <% }); %>
</div>
